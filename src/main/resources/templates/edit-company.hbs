{{!--    Edit companies view - using express handlebars     --}}
<title>Bug Tracker | Update Company</title>
<link type="text/css" rel="stylesheet" href="/css/company.css">

   
{{!-- Container for the dashboard --}}
<div class="form-card mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-cell--12-col-desktop">
    <div class="mdl-card__title mdl-color-text--white dashboard-top-bar">
        <h2 class="mdl-card__title-text">Update Company</h2>
    </div>
    <div class="mdl-card__supporting-text mdl-color-text--grey-600">
        <form id="recordForm" action="/bug_tracker/companies/add_company/insertCompany">
            <fieldset>
                <legend>Update Company</legend>
        
                <label for="company-name">Company Name</label>
                <input required value="{{this.companyName}}" type="text" name="companyName" id="company-name-field"><br>

                <label for="company-date-joined">Date Joined</label>
                <input value="{{this.dateJoined}}" class="submitBtn" required type="date" name="dateJoined" id="company-date-joined-field" placeholder="yyyy-mm-dd"><br>

                <input class="submitBtn btn-style" type="submit" id="save" value="Update">
                <div id="spinner" class = "mdl-spinner mdl-spinner--single-color mdl-js-spinner is-active"></div>
            </fieldset>
        </form>
    </div>
</div>


<script src="/js/edit-company.js"></script>