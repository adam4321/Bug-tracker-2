{{!--  Add programmer view - using express handlebars    --}}
<title>Bug Tracker | Programmers</title>
<link type="text/css" rel="stylesheet" href="/css/programmer.css">

{{!-- Access lvl 3 can edit programmers --}}
{{#if (greater this.accessLevel 2)}}
    {{!-- Container for Programmers Table --}}
    <div class="table-card card-lvl-3 mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-cell--12-col-desktop">
        <div class="mdl-card__title mdl-color-text--white dashboard-top-bar">
            <h2 class="mdl-card__title-text">Programmers</h2>
        </div>
        <div class="mdl-card__supporting-text mdl-color-text--grey-600">
            <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp" id="recordTable">
                <thead>
                    <tr>
                        <th class="mdl-data-table__cell--non-numeric">Programmer Name</th>
                        <th class="mdl-data-table__cell--non-numeric">Email</th>
                        <th class="mdl-data-table__cell--non-numeric">Date Started</th>
                        <th class="mdl-data-table__cell--non-numeric">Access Level</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each programmers}}
                    <tr>
                        <td class="mdl-data-table__cell--non-numeric">{{this.firstName}} {{this.lastName}}</td>
                        <td class="mdl-data-table__cell--non-numeric">{{this.email}}</td>
                        <td>{{this.dateStarted}}</td>
                        <td>{{this.accessLevel}}</td>
                        <td><a class="update-btn" href="/bug_tracker/programmers/edit_programmer?programmerId={{this.programmerId}}">Update</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
{{else}}
    {{!-- Container for Programmers Table --}}
    <div class="table-card card-lvl-2 mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-cell--12-col-desktop">
        <div class="mdl-card__title mdl-color-text--white dashboard-top-bar">
            <h2 class="mdl-card__title-text">Programmers</h2>
        </div>
        <div class="mdl-card__supporting-text mdl-color-text--grey-600">
            <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp" id="recordTable">
                <thead>
                    <tr>
                        <th class="mdl-data-table__cell--non-numeric">Programmer Name</th>
                        <th class="mdl-data-table__cell--non-numeric">Email</th>
                        <th class="mdl-data-table__cell--non-numeric">Date Started</th>
                        <th class="mdl-data-table__cell--non-numeric">Access Level</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each programmers}}
                    <tr>
                        <td class="mdl-data-table__cell--non-numeric">{{this.firstName}} {{this.lastName}}</td>
                        <td class="mdl-data-table__cell--non-numeric">{{this.email}}</td>
                        <td>{{this.dateStarted}}</td>
                        <td>{{this.accessLevel}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
{{/if}}
