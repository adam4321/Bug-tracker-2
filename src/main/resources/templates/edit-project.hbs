{{!--   New project view - using express handlebars    --}}
<title>Bug Tracker | Update Project</title>
<link type="text/css" rel="stylesheet" href="/css/project.css">
        
{{!-- Container for the dashboard --}}
<div class="form-card mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-cell--12-col-desktop" id="main-box">
    <div class="mdl-card__title mdl-color-text--white dashboard-top-bar">
        <h2 class="mdl-card__title-text">Update Project</h2>
    </div>
    <div class="mdl-card__supporting-text mdl-color-text--grey-600">
        <form id="recordForm" action="/bug_tracker/insertProject">
            <fieldset>
                <legend>Project Details</legend>
                <label for="project-name">Project Name</label>
                <input required value="{{this.projectName}}" type="text" name="projectName" id="project-name-field">
                <br>

                <label for="project-company">Company</label>
                <select class="submitBtn" required name="projectCompany" id="project-company-field">
                    <option value="{{this.companyName}}" selected>{{this.companyName}}"</option>
                    {{#each companies}}
                        <option>{{this.companyName}}</option>
                    {{/each}}
                </select> <br>
        
                <label for="started-date">Date Started</label>
                <input value="{{this.dateStarted}}" class="submitBtn" required type="date" name="startedDate" id="project-date-started-field" placeholder="yyyy-mm-dd">
                <br>

                <label for="updated-date">Last Updated</label>
                <input value="{{this.lastUpdated}}" class="submitBtn" required type="date" name="updatedDate" id="project-date-updated-field" placeholder="yyyy-mm-dd">
                <br>
        
                <label for="maintenance">In Maintenance</label>
                {{#if this.inMaintenance}} 
                <input class="radio-input" type="radio" name="maintenance" value="1" id="maintenance-yes" checked>
                <label class="radio-label" for="maintenance">Yes</label>
                <input class="radio-input" type="radio" name="maintenance" value="0" id="maintenance-no">
                <label class="radio-label" for="maintenance">No</label>
                {{else}}
                <input class="radio-input" type="radio" name="maintenance" value="1" id="maintenance-yes">
                <label class="radio-label" for="maintenance">Yes</label>
                <input class="radio-input" type="radio" name="maintenance" value="0" id="maintenance-no" checked>
                <label class="radio-label" for="maintenance">No</label>
                {{/if}}
                <br>

                <input class="submitBtn btn-style" type="submit" id="save" value="Update">
                <div id="spinner" class = "mdl-spinner mdl-spinner--single-color mdl-js-spinner is-active"></div>
            </fieldset>
        </form>
    </div>
</div>


<script src="/js/edit-project.js"></script>
