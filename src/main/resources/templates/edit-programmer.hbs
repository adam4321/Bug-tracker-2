{{!-- Update user profile and links to update projects, programmers, and companies - using express handlebars --}}

<title>Bug Tracker | Update Programmer</title>
<link type="text/css" rel="stylesheet" href="/css/admin.css">
        
        
{{!-- Container for the dashboard --}}
<div 
    class="form-card mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-cell--12-col-desktop" 
    id="login-box"
>
    <div class="mdl-card__title mdl-color-text--white dashboard-top-bar">
        <h2 class="mdl-card__title-text">Update Your Profile</h2>
    </div>
    <div class="mdl-card__supporting-text mdl-color-text--grey-600">
        <form id="recordForm">
            <fieldset>
        
                <label for="programmer-fname">First name</label>
                <input required type="text" name="programmerFName" id="programmer-fname-field" value="{{firstName}}"> 
                <br>

                <label for="programmer-lname">Last name</label>
                <input required type="text" name="programmerLName" id="programmer-lname-field" value="{{lastName}}"> 
                <br>

                <label for="programmer-email">Email</label>
                <input required type="text" name="userEmail" id="programmer-email-field" value="{{email}}"> 
                <br>

                <label for="user-phone">Mobile Number</label>
                <input required type="text" name="user-phone" id="programmer-phone-field" value="{{phone}}"> 
                <br>
        
                <label for="started-date">Date Started</label>
                <input class="submitBtn" required type="date" name="startedDate" id="project-date-started-field" placeholder="yyyy-mm-dd" value="{{dateStarted}}"> 
                <br>

                <label for="programmer-access">Access Level</label>
                {{#if (greater accessLevel 2)}}
                <select class="submitBtn" name="programmerAccess" id="programmer-access-field" value="{{accLvl}}">
                    <option value="{{accLvl}}" selected>{{accLvl}}</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                </select>
                {{else}}
                <select disabled class="submitBtn" name="programmerAccess" id="programmer-access-field" value="{{accLvl}}">
                    <option value="{{accLvl}}" selected>{{accLvl}}</option>
                </select>
                {{/if}} 
                <br>

            </fieldset>
        </form>
        <br>

        <input class="submitBtn btn-style" type="submit" id="save" value="Save" onclick="submitUpdate()">
        <input class="submitBtn btn-style" type="submit" id="cancel" value="Cancel">

        <div id="spinner" class = "mdl-spinner mdl-spinner--single-color mdl-js-spinner is-active"></div>
    </div>
</div>

<script src="/js/edit-programmer.js"></script>
